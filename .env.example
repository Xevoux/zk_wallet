# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_NAME="ZK Payment Wallet"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://yourdomain.com
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=zk_payment
DB_USERNAME=root
DB_PASSWORD=

# ==============================================
# POLYGON BLOCKCHAIN - TESTNET (AMOY)
# ==============================================
POLYGON_NETWORK=testnet
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology/
POLYGON_CHAIN_ID=80002
POLYGON_CONTRACT_ADDRESS=
POLYGON_PRIVATE_KEY=
POLYGON_MASTER_WALLET=

# ==============================================
# POLYGON BLOCKCHAIN - MAINNET
# Uncomment dan ganti values di atas jika deploy ke mainnet
# ==============================================
# POLYGON_NETWORK=mainnet
# POLYGON_RPC_URL=https://polygon-rpc.com/
# POLYGON_CHAIN_ID=137
# POLYGON_CONTRACT_ADDRESS=0xYourMainnetContractAddress
# POLYGON_PRIVATE_KEY=your_mainnet_private_key_64chars
# POLYGON_MASTER_WALLET=0xYourMainnetWalletAddress

# ==============================================
# SMART CONTRACT DEPLOYMENT (Hardhat)
# Untuk deploy smart contract - bisa sama dengan POLYGON_PRIVATE_KEY
# ==============================================
DEPLOYER_PRIVATE_KEY=
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology/
POLYGON_MAINNET_RPC_URL=https://polygon-rpc.com/
POLYGONSCAN_API_KEY=

# ==============================================
# MIDTRANS PAYMENT GATEWAY
# Get from: https://dashboard.midtrans.com/
# ==============================================
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# ==============================================
# ZK-SNARK CONFIGURATION
# ==============================================
ZK_ENABLED=true
ZK_CIRCUIT_PATH=
ZK_PROVING_KEY_PATH=
ZK_VERIFICATION_KEY_PATH=

# ==============================================
# QR CODE CONFIGURATION
# ==============================================
QR_CODE_SIZE=300
QR_CODE_FORMAT=png
QR_CODE_ERROR_CORRECTION=M

# ==============================================
# SESSION & CACHE
# ==============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=

# ==============================================
# QUEUE CONFIGURATION
# ==============================================
QUEUE_CONNECTION=database

# ==============================================
# LOGGING
# ==============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ==============================================
# BROADCASTING
# ==============================================
BROADCAST_CONNECTION=log

# ==============================================
# MAIL CONFIGURATION (Optional)
# ==============================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================
# AWS S3 (Optional - Uncomment jika pakai)
# ==============================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ==============================================
# PUSHER (Optional - Uncomment jika pakai)
# ==============================================
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# ==============================================
# FILESYSTEM
# ==============================================
FILESYSTEM_DISK=public

# ==============================================
# VITE CONFIGURATION
# ==============================================
VITE_APP_NAME="${APP_NAME}"

# ==============================================
# NOTES / CATATAN PENTING:
# ==============================================
# 1. APP_KEY: Generate dengan "php artisan key:generate"
# 2. APP_DEBUG: WAJIB false untuk production!
# 3. APP_URL: Gunakan https:// untuk production
# 4. Database: Buat dulu database di hosting sebelum migration
# 5. POLYGON_CONTRACT_ADDRESS: Dari hasil deploy smart contract
# 6. POLYGON_PRIVATE_KEY: 64 karakter hex, TANPA prefix 0x
# 7. Private Keys: JANGAN SHARE atau commit ke Git!
# 8. Backup .env: Simpan di tempat aman
# ==============================================